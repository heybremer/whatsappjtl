<?xml version="1.0" encoding="utf-8"?>
<jtlshopplugin>
    <Name>Whatsapp Click To Chat</Name>
    <Description>Floating WhatsApp tıkla-yaz butonu (tüm sayfalar)</Description>
    <Author>Bremer</Author>
    <Mail>plugins@example.com</Mail>
    <URL>https://example.com</URL>
    <XMLVersion>100</XMLVersion>
    <PluginID>whatsappclicktochat</PluginID>
    <Version>1.0.1</Version>
    <CreateDate>2025-10-06</CreateDate>
    <ShopVersion>5.4.0</ShopVersion>
    <MinShopVersion>500</MinShopVersion>
    <MaxShopVersion>540</MaxShopVersion>
    <License>MIT</License>
    <Icon>icon.svg</Icon>
    <Readme>README.md</Readme>
    <Changelog>CHANGELOG.md</Changelog>
    <Install />
    <Uninstall />
    <Settings>
        <Setting>
            <Name>whatsapp_phone</Name>
            <Value></Value>
            <Type>text</Type>
            <Description>WhatsApp telefon numarası (ülke koduyla, boşluksuz, örn: 905321234567)</Description>
        </Setting>
        <Setting>
            <Name>default_message</Name>
            <Value>Merhaba, bilgi almak istiyorum.</Value>
            <Type>text</Type>
            <Description>Varsayılan mesaj</Description>
        </Setting>
        <Setting>
            <Name>button_label</Name>
            <Value>WhatsApp ile yazın</Value>
            <Type>text</Type>
            <Description>Erişilebilirlik etiketi (aria-label) değeri</Description>
        </Setting>
        <Setting>
            <Name>enabled</Name>
            <Value>Y</Value>
            <Type>selectbox</Type>
            <Description>Butonu etkinleştir</Description>
            <Options>
                <Option>
                    <Value>Y</Value>
                    <Name>Evet</Name>
                </Option>
                <Option>
                    <Value>N</Value>
                    <Name>Hayır</Name>
                </Option>
            </Options>
        </Setting>
    </Settings>
    <Hooks>
        <Hook id="140" sort="10">
            <File>frontend/template/whatsapp.tpl</File>
        </Hook>
    </Hooks>
</jtlshopplugin>
